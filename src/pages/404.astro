---
import Layout from "@/components/layout.astro";
import { Image } from "astro:assets";

import NotFoundSvg from "@/assets/404.svg";
---

<Layout
  minutesRead="404"
  status={404}
  title="404 - Not Found"
  description="???"
>
  <Image
    src={NotFoundSvg}
    alt="404"
    class="w-1/2 mx-auto saturate-0 my-8 opacity-70"
  />
