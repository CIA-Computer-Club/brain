<input type="checkbox" id="theme-toggle" />
<label
  for="theme-toggle"
  class="duration-200 ease-in-out dark:after:-translate-x-full dark:after:left-[calc(100%-5px)] dark:bg-gray-600"
  >Toggle</label
>

<style>
  input[type="checkbox"] {
    height: 0;
    width: 0;
    visibility: hidden;
  }

  label {
    cursor: pointer;
    text-indent: -9999px;
    width: 50px;
    height: 30px;
    background: var(--primary);
    display: block;
    border-radius: 100px;
    position: relative;
  }

  label:after {
    @apply duration-300 ease-out;
    content: "";
    position: absolute;
    top: 5px;
    left: 5px;
    width: 20px;
    height: 20px;
    background: #fff;
    border-radius: 90px;
  }

  label:active:after {
    width: 30px;
  }
</style>

<script>
  function addListener() {
    const themeToggle = document.querySelector("#theme-toggle")! as any;

    themeToggle.addEventListener("change", (event: any) => {
      console.log(event);
      const documentTheme =
        window.document.documentElement.classList.contains("dark");

      const localStorageTheme = window.localStorage.getItem("theme");

      const isDarkMode = documentTheme && localStorageTheme === "dark";

      console.log(isDarkMode);

      if (!isDarkMode) {
        window.localStorage.setItem("theme", "dark");
        window.document.documentElement.classList.add("dark");
      } else {
        window.localStorage.setItem("theme", "light");
        window.document.documentElement.classList.remove("dark");
      }
    });
  }

  addListener();

  document.addEventListener("astro:after-swap", (swapevent) => {
    addListener();
  });
</script>
